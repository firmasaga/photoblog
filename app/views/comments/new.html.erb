<h1>New comment</h1>

<%= error_messages_for :comment %>

<% form_for([@photo, @comment]) do |f| %>
  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', @photo %>
